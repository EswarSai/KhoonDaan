<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#fb233e" />

            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="2dp"
                android:right="5dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>

            <solid
                android:color="#fb233e" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="5dp"
                android:top="2dp"
                android:right="5dp"
                android:bottom="2dp" />
        </shape>
    </item>


    <item>
            <shape>
                <gradient
                    android:startColor="#ef4444"
                    android:endColor="#992f2f"
                    android:angle="270" />

                <corners
                    android:radius="2dp" />
                <padding
                    android:left="5dp"
                    android:top="2dp"
                    android:right="5dp"
                    android:bottom="2dp" />
            </shape>
        </item>

</selector>